<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <h1 class="ability">Add abilities to <%= @animal.name %></h1>

      <%= simple_form_for [@animal, @animal_ability] do |f| %>

        <%= f.association :ability, as: :check_boxes, collection: Ability.all, input_html: { class: "tag-selector" }, item_wrapper_class: 'tag-item' %>

        <%= f.submit "Add ability", class: 'btn btn-primary rounded-pill' %>
      <% end %>
    </div>
  </div>
</div>
