        </button>
        <ul class="dropdown-menu">
          <li><a class="dropdown-item" href="#">Dropdown link</a></li>
          <li><a class="dropdown-item" href="#">Dropdown link</a></li>
        </ul>
      </div>
    </div>



<div class='col-9 bg-white' style="display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    grid-gap: 20px;
    ">
   <div class="row" >
  <% @animals.each do |animal| %>
    <div class="col-sm-4">
      <div class="card mt-3 " >
        <%= image_tag('lia-xKRv2abDDeg-unsplash.jpg') %>
        <div class="card-body  ">
          <h5 class="card-title"><%= link_to animal.name, animal_path(animal) %></h5>
          <p class="card-text"><%= animal.location %></p>
          <a href="#" class="btn btn-primary"><%= animal.abilities %></a>
          <a href="#" class="btn btn-warning">Type 2</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>

