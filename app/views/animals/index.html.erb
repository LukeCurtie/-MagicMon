<%= render 'sidebar' %>



<div class='col-9 bg-white' style="display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-gap: 20px;

    ">

  <% @animals.each do |animal| %>

      <div class="card mt-3 animal-card"  >
        <%# Cloudinary Image %>
        <%# upload the image to Cloudinary %>
        <%= cl_image_tag animal.image.key, class: "card-img-top" if animal.image.attached? %>
        <div class="card-body  ">
          <h5 class="card-title"><%= link_to animal.name, animal_path(animal) %></h5>
          <p class="card-text"><%= animal.location %></p>
          <% animal.abilities.each do |ability| %>
            <a href="#" class="btn btn-success rounded-pill"><%=ability.name %></a>

          <% end %>
        </div>
      </div>

  <% end %>
</div>


