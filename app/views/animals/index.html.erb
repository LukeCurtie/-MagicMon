<div class="container top-header bg-white">
  <h2 class="dancing-script bounce-top" style="text-align:center">MagicMon <i class="fa-solid fa-dragon"></i></i></h2>
  <div class="container-fluid">
    <form class="d-flex" role="search" action="<%= animals_path %>" method="get">
  <input name="search" class="form-control me-2 rounded-pill" type="search" placeholder="Search for an animal..." aria-label="Search" style="border: none; box-shadow: 0 0 15px rgba(0,0,0,0.1);">
  <button class="btn btn-primary rounded-pill" type="submit" style="border: none; box-shadow: 0 0 15px rgba(0,0,0,0.2);">Search</button>
</form>
  </div>
</div>

